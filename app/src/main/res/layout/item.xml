<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="410dp"
    android:layout_height="450dp">


    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:background="@drawable/customborder">

        <TableRow
            android:id="@+id/rowImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/_fymasaazjvcsepagi7xtnmlbr4" />
        </TableRow>

        <TableRow
            android:id="@+id/rowCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txtRowCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:id="@+id/rowDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txtRowDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:id="@+id/rowDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txtRowDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:id="@+id/rowStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txtRowStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:id="@+id/rowEnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txtRowEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center" />
        </TableRow>
    </LinearLayout>
</androidx.cardview.widget.CardView>